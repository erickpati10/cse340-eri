<% if (title) { %>
<h1><%= title %></h1>
<%} else { res.redirect("/")}%> <br />

<%- messages() %> <br />

<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<div class="classification_form">
  <p>FIELD IS REQUIRED.</p>

  <form action="add-classification" method="POST">
    <label for="classification_name">Classification Name:</label>
    <span class="error-message">NAME MUST BE ALPHABETIC CHARACTERS ONLY.</span>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      required
      pattern="[^\s]+"
      title="Classification name cannot contain spaces or special characters"
    />
    <button type="submit">Add Classification</button>
  </form>
</div>
