<% if (title) { %>
<h1><%= title %></h1>
<%} else { res.redirect("/")}%> <br />

<%- messages() %> <br />

<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<p>Confirm Deletion - The delete is permanent and cannot be undone.</p>

<div class="container">
  <form action="/inv/delete" method="POST">
    

    <label for="inv_make">Make:</label>
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      required
      value="<%= locals.inv_make %>"
    /><br /><br />

    <label for="inv_model">Model:</label>
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      required
      value="<%= locals.inv_model %>"
    /><br /><br />

    <label for="inv_price">Price:</label>
    <input
      type="number"
      id="inv_price"
      name="inv_price"
      required
      value="<%= locals.inv_price %>"
    /><br />

    <label for="inv_year">Year:</label>
    <input
      type="number"
      id="inv_year"
      name="inv_year"
      required
      value="<%= locals.inv_year %>"
    /><br /><br />

    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%=
    locals.inv_id %>" <% } %>> 

    <button type="submit">Delete Vehicle</button>
  </form>
</div>
